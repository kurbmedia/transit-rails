<% if parent_page.present? %>
<% content = capture do %>
  <ul class='sub-tree'>
    <% parent_page.children.each do |page| %>
    <%= render partial: "transit/pages/page", locals: { page: page } %>
    <% end %>
  </ul>
<% end %>
$('#page_<%= parent_page.id %> div.sub-pages')
  .slideUp('fast', function(){
    $(this).html("<%= escape_javascript(content) %>")
      .slideDown('fast');
  });

<% end %>