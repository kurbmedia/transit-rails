<div class="modal fade" id="transit_modal_window" tabindex="-1" role="dialog" aria-labelledby="transit_modal_title" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="transit_modal_title"><%= title %></h4>
            </div>
            <div class="modal-body" id="transit_modal_content">
                <%= content %>
            </div>
            <div class="modal-footer">
                <button type="button" data-submits="#transit_modal_window div.modal-body form" class="btn btn-primary"><i class='fa fa-check'></i> Save</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal"><i class='fa fa-times'></i> Close</button>
            </div>
        </div>
    </div>
</div>